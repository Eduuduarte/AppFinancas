<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fincost">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinCost">
        <activity
            android:name=".Activity.MeusInvestimentos"
            android:exported="true" />
        <activity android:name=".Activity.InvestimentosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity"></meta-data>
        </activity>
        <activity
            android:name=".Activity.DespesasActivity"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity"></meta-data>
        </activity>
        <activity
            android:name=".Activity.ReceitasActivity"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Activity.MainActivity"></meta-data>
        </activity>
        <activity android:name=".Activity.CadastrarUsuario" />
        <activity
            android:name=".Activity.TelaInicial"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.MainActivity" />
    </application>

</manifest>